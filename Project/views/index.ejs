<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

    <div class="main  w-full min-h-screen bg-zinc-900">
        <h1 class="text-white text-6xl text-center font-weight-700">Task Manager</h1>

        <div class="form ">

            <form class="flex mt-5 m-10 flex-col" action="/create" method="post">
                <input class="rounded-md block mt-2 text-white px-2 py-2 bg-zinc-700" type="text" placeholder="Title"
                    name="title">

                <textarea class="rounded-md block  mt-2 text-white px-2 py-2 resize-none bg-zinc-700" id=""
                    placeholder="write task here..." name="details" cols="30" rows="10"></textarea>

                <input class="rounded-md hover text-white bg-blue-500 mt-2" type="submit" value="Create Task">
            </form>

        </div>


        <div class="items-center justify-center tasks flex gap-3 p-10 wrap">
            <% if (file.length>0){ %>
                <% file.forEach(function(val) { %>
                    <div class="task w-72 h-28 px-3 py-4 rounded-md bg-zinc-700">
                        <h1 class="text-white text-center text-sm w-70">
                            <%= val %>
                        </h1>
                        <a class="text-blue-400 text-end inline-block mt-2" href="/file/<%= val %>">
                            See more...
                        </a>
                    </div>
                    <% }) %>
                        <% } else{ %>
                            <h2 class="text-white">No task yet.</h2>
                            <% } %>

        </div>
    </div>
</body>

</html>